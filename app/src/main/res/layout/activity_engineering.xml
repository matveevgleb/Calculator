<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Engineering">

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberField"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numberField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:hint="0"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="40sp" />

        <Button
            android:id="@+id/DEG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="166dp"
            android:layout_marginRight="300dp"
            android:background="#00FFFFFF"
            android:onClick="onDeg"
            android:text="DEG"
            android:textColor="#3F51B5"
            android:visibility="gone" />

        <Button
            android:id="@+id/RAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="166dp"
            android:layout_marginRight="300dp"
            android:background="#00FFFFFF"
            android:onClick="onRad"
            android:text="RAD"
            android:textColor="#3F51B5"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Standart"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:onClick="onClick2"
                    android:text="Standart"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Ingener"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:text="Engineering"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />


                <Button
                    android:id="@+id/Programm"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:onClick="onClick4"
                    android:text="Programmer"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />


            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="266dp"
            android:background="#3F51B5"
            android:text=""
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="166dp"
            android:text="Button"
            android:visibility="gone" />

    </RelativeLayout>

