<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberField"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numberField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="right"
            android:hint="0"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="40sp" />

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Standart"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:onClick="onClick2"
                    android:text="Standart"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Ingener"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:onClick="onClick2"
                    android:text="Engineering"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />


                <Button
                    android:id="@+id/Programm"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ser_press"
                    android:onClick="onClick4"
                    android:text="Programmer"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />


            </LinearLayout>
        </HorizontalScrollView>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_press"
            android:onClick="clear"
            android:text="AC"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="0"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/pr"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:onClick="onClick1"
            android:text="%"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:onClick="onClick1"
            android:text="รท"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="7"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="8"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="9"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:onClick="onClick1"
            android:text="ร"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="4"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="5"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="6"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:onClick="onClick1"
            android:text="+"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="2"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_press"
            android:onClick="onClick1"
            android:text="3"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press"
            android:onClick="onClick1"
            android:text="-"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/press_equals"
            android:onClick="onClick"
            android:text="="
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>